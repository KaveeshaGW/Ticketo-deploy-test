generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User table
model User {
  id            String     @id @default(uuid()) // Primary Key
  email         String     @unique
  password      String
  firstName     String
  lastName      String
  dob           DateTime
  nic           String?    @unique
  userType      userType[]
  token         String     @default("")
  loginStatus   Boolean    @default(false)
  accountStatus Boolean    @default(false)
  mobileNumber  String
}

enum userType {
  ADMIN
  CONTROL_CENTRE
  STATION_MASTER
  DRIVER
  TICKET_CLERK
  TICKET_CHECKER
  PASSENGER
}
